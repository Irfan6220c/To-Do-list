<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Todo list</title>
    <link rel="stylesheet" href="CSS\styles.css" />
  </head>

  <body>
    <div class="box" id="heading">
      <h1>It is a <%= KindofDay %> !</h1>
    </div>

    <div class="box">
      <% for (var index = 0; index < NewItem.length; index++) { %>
        <form class="item" action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%=NewItem[index]._id%>" onChange="this.form.submit()" />
        <p><%= NewItem[index].name %></p>
      </form>
      </div>
      <% } %>

      <form class="item" action="/" method="post">
        <input type="text" name="fname" placeholder="New Item" autocomplete="off" />
        <button type="submit">+</button>
      </form>
    </div>
  </body>
</html>
